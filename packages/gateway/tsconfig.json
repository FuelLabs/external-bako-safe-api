{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      "ESNext.disposable"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "./",
    "plugins": [
      {
        "name": "ts-gql-plugin"
      }
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "types": [
      "node",
      "node-fetch",
      "web",
      "jest"
    ]
  },
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}

